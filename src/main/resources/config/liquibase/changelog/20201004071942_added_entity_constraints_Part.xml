<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Part.
    -->
    <changeSet id="20201004071942-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="part_id"
                                 baseTableName="part_image"
                                 constraintName="fk_part_image_part_id"
                                 referencedColumnNames="id"
                                 referencedTableName="part"/>

        <addForeignKeyConstraint baseColumnNames="image_id"
                                 baseTableName="part_image"
                                 constraintName="fk_part_image_image_id"
                                 referencedColumnNames="id"
                                 referencedTableName="image"/>
        
        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="part"
                                 constraintName="fk_part_book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>

    </changeSet>
</databaseChangeLog>
