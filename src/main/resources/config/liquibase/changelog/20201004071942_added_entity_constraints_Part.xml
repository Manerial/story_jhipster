<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Part.
    -->
    <changeSet id="20201004071942-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="part_id"
                                 baseTableName="rel_part__image"
                                 constraintName="fk_rel_part__image__part_id"
                                 referencedColumnNames="id"
                                 referencedTableName="part"
                                 />

        <addForeignKeyConstraint baseColumnNames="image_id"
                                 baseTableName="rel_part__image"
                                 constraintName="fk_rel_part__image__image_id"
                                 referencedColumnNames="id"
                                 referencedTableName="image"
                                 />

        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="part"
                                 constraintName="fk_part__book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"
                                 />
    </changeSet>
</databaseChangeLog>
